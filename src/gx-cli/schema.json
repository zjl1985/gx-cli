{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsAngularNgNew",
    "title": "Angular Ng New Options Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the workspace.",
            "type": "string",
            "format": "html-selector",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "请输入项目名称?"
        },
        "type": {
            "description": "类型ng|java",
            "type": "string",
            "x-prompt": {
                "message": "你想安装什么类型的项目呀?",
                "type": "list",
                "items": [{
                        "value": "java",
                        "label": "java"
                    },
                    {
                        "value": "ng",
                        "label": "ng"
                    },
                    {
                        "value": "ionic3",
                        "label": "ionic3"
                    },
                    {
                        "value": "ionic4",
                        "label": "ionic4"
                    }
                ]
            }
        },
        "appRoot": {
            "description": "The path where new projects will be created.",
            "type": "string",
            "visible": "false"
        }
    }
}